{
    "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
    "vcs": {
      "enabled": false,
      "clientKind": "git",
      "useIgnoreFile": false
    },
    "files": {
      "ignoreUnknown": false,
      "ignore": ["package-lock.json", "*/node_modules/*", "*/www/*", "*/.angular/*", "spotify-web-api.js"]
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "lineWidth": 120
    },
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "suspicious": {
          "noExplicitAny": "off"
        },
        "correctness": {
          "noUnusedImports": {
            "level": "warn",
            "fix": "safe"
          }
        }
      }
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "semicolons": "asNeeded"
      }
    }
  }
  